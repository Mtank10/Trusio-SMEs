# Database
DATABASE_URL="postgresql://username:password@localhost:5432/supply_chain_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_STORAGE_BUCKET="your-bucket-name"
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# Email Configuration (for sending supplier invites)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Server Configuration
PORT=3001
NODE_ENV="development"

# Frontend URL (for CORS and email links)
FRONTEND_URL="http://localhost:5173"

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES="application/pdf,image/jpeg,image/png,image/jpg,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"